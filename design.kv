        orientation: 'vertical'
        size_hint: None, None
        size: 60, 200
        pos_hint: {'right': 0.98, 'center_y': 0.45}
        spacing: 10
        ModernButton:
            text: "+"
            font_size: 24
            background_normal: ""
            background_color: 0.1, 0.15, 0.25, 0.9
            color: 0.2, 0.8, 1, 1
