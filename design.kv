<BeeMapWidget>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.01, 0.02, 0.05, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Header centralizado
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, None
        height: 100
        pos_hint: {'center_x': 0.5, 'top': 1}
        canvas.before:
            Color:
                rgba: 0.04, 0.06, 0.1, 0.95
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [0, 0, 25, 25]
            Color:
                rgba: 0.2, 0.6, 1, 0.4
            Line:
                points: self.x, self.y, self.x + self.width, self.y
                width: 3
        Widget:
            size_hint_y: 0.2
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.6
            padding: [50, 0]
            Label:
                text: "üêù"
                font_size: 40
                size_hint_x: 0.1
            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.8
                Label:
                    markup: True
                    text: "[b]BeeMap Pro[/b]"
                    font_size: 32
                    color: 0.2, 0.8, 1, 1
                    size_hint_y: 0.6
                Label:
                    text: "Sistema Inteligente de Mapeamento Ap√≠cola"
                    font_size: 16
                    color: 0.6, 0.7, 0.8, 1
                    size_hint_y: 0.4
        Widget:
            size_hint_y: 0.2

