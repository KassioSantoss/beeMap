    MapScatter:
        id: map_scatter
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        size_hint: None, None
        size: 1200, 800
        on_transform: root.on_map_transform(self, self.transform)
        Widget:
            id: canvas_area
            size: 1200, 800

    # Controles de zoom - lado direito
